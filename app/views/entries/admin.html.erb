<%if user_signed_in?%>
<div class="container">
  <br>
  <!-- col-xs-offset-3 col-xs-9 -->
  <h2 >Noticias de la semana</h2>
  <div class="row">
    <div class="col-md-6">
      <h5>Bienvenido <%= current_user.email%></h5>
    </div>
    <div class="col-md-offset-3 col-md-3">
        <%= link_to 'Nueva Noticia', new_entry_path, class:"btn be-light-green white"%>
    </div>
  </div>
  <br>
</div>
<%end%>
<div class="container contenido">
  <table class="contenido">
    <thead>
      <tr class="center-xs">
        <th>Fecha de Publicación</th>
        <th>Título</th>
        <th>Bajada</th>
        <th>Cuerpo</th>
        <th>Visitas</th>
        <th>Comentarios</th>
        <th>Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr class="strong-border">
          <td><small><%= entry.created_at %></small></td>
          <td><%= truncate(entry.title, :length => 40) %></td>
          <td><%= entry.downtitle %></td>
          <td><%= truncate(entry.body, :length => 100) %></td>
          <td class="center-xs"><%= entry.counter %></td>
          <td class="center-xs"><%= entry.comments.length %></td>
          <td class="center-xs">
            <%= link_to 'Ver', entry %>
            <%= link_to 'Editar', edit_entry_path(entry) %>
            <%= link_to 'Eliminar', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
<br>
